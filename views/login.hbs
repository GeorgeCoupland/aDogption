<div class="container">
  <h1>Welcome back!</h1>

  <form method="POST" action="/auth/login">

    <div class="field">
      <label>email</label>
      <input type="email" name="email" />
    </div>

    <div class="field">
      <label>password</label>
      <input type="password" name="password" />
    </div>

    <div class="field submit">
      <button type="submit">Save</button>
    </div>

    <p>Don't have an account? <a href="/auth/signup">Click here</a></p>
  </form>
  {{#each errorMessage}} {{this}} {{/each}}
</div>